#include <stdio.h>
#include <malloc.h>

char *split(char string[])
{
    int i = 0;
    int nStart = 0;
    int nSize = 0;
    while(string[i])
    {
        if(string[i] == ' ' && i > 0)
        {
            char *temparray = malloc((nSize + 1) * sizeof(char));
            if(temparray == NULL)
            {
                printf("Failed to allocate memory\n");
                return NULL;
            }
            for(int j = 0; j <= nSize; j++)
            {
                temparray[j] = string[j];
            }
            temparray[nSize] = '\0'; // add null terminator
            return temparray;
        }
        nSize++, i++;
    }
    return NULL;
}

int main()
{
    char string[] = "hello lol";
    char *array = split(string);
    printf("%s", array);
    return 0;
}
